//https://codeforces.com/problemset/problem/282/A
#include <bits/stdc++.h>

using namespace std;

#define endl '\n'
using ll = long long;
const int N = 1e5 + 9;

void solve () 
{
   int n,X(0);
   cin >> n;
   string s;


   while (n--)
   {
    cin >> s;

    if (s[1] == '+')
    {
      ++X;
    }else
    {
      --X;
    }
   }
   cout << X << endl;


}
int32_t main() {

  ios_base::sync_with_stdio(0);
  cin.tie(0);

  solve();

  return 0;

}

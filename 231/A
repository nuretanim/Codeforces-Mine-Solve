//https://codeforces.com/problemset/problem/231/A
#include <bits/stdc++.h>

using namespace std;

#define endl '\n'
using ll = long long;
const int N = 1e5 + 9;

void solve () 
{
  int n,i,sum,count=0;
    int p[3];
    cin>>n;
    while(n--)
    {
        sum=0;
        for(i=0;i<3;i++)
        {
            cin>>p[i];
            sum+=p[i];
        }
        if(sum>=2) count++;
    }
    cout<<count;

}

int32_t main() {

  ios_base::sync_with_stdio(0);
  cin.tie(0);

  solve();

  return 0;

}
